<h1>{{name}}</h1>

<div>
    <pre>{{text}}</pre>
    <p class="author">{{author}}</p>

    <div class="buttons">
        <form action="/category" method="GET">
            <button class="btn goHome">До категорій</button>
        </form>

        {{#if isAuthor}}
            <form action="/song/edit/{{id}}" method="GET">
                <button class="btn">Редагувати</button>
            </form>

            <form action="/song/delete/{{id}}" method="POST">
                <button class="btn red">Видалити</button>
            </form>
        {{/if}}
    </div>
</div>
