<h1>{{category}}</h1>

{{#if songs.length}}
    {{#each songs}}
        <div class="card">
            <div class="card-content">
                <a href="/song/{{id}}">{{name}}</a>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Поки пісень для даної категорії не додали</p>
{{/if}}

<div class="buttons">
    <form action="/song/add" method="GET">
        <input id="name" name="name" type="hidden" required  value="{{category}}">
        <button class="waves-effect waves-light btn-small">Додати нову пісню</button>
    </form>

    <form action="/" method="GET">
        <button class="waves-effect waves-light btn-small">До списку категорій</button>
    </form>
</div>
