<h1>Додати нову пісню</h1>

<form action="/song/new" method="POST">
    <div>
        <select class="browser-default" id="category" name="category" required>
            <option value="{{current}}" selected>{{current}}</option>
            {{#each categories}}
                {{#ifneq @root.current name}}
                    <option>{{name}}</option>
                {{/ifneq}}
            {{/each}}
        </select>
        <label for="category">Виберіть категорію</label>
    </div>

    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required value="{{name}}">
        <label for="name">Назва пісні</label>
        <span class="helper-text" data-error="Назва пісні"></span>
    </div>

    <div class="input-field">
        <textarea id="text" name="text" class="materialize-textarea validate" required>{{text}}</textarea>
        <label for="text">Текст пісні</label>
        <span class="helper-text" data-error="Введіть текст пісні"></span>
    </div>

    <div class="input-field">
        <input id="author" name="author" type="text" class="validate" required value="{{author}}">
        <label for="author">Автор</label>
        <span class="helper-text" data-error="Введіть автора"></span>
    </div>

    <div class="buttons">
        <button class="btn">Додати пісню</button>
        <a href="/" class="btn goHome">Назад на головну</a>
    </div>
</form>