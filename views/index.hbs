<h1>Категорії пісень</h1>

{{#if categories.length}}
    {{#each categories}}
        <div class="card">
            <div class="card-content">
                <a href="/{{short}}">{{name}}</a>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Поки пісень не додали</p>
{{/if}}
<a href="/song/add">Додати нову пісню</a>
