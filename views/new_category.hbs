<h1>Додати нову категорію</h1>

<form action="/category/new" method="POST">
    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required>
        <label for="name">Назва категорії</label>
        <span class="helper-text" data-error="Назва категорії"></span>
    </div>

    <div>
        <select class="browser-default" id="short" name="short" required>
            <option disabled selected >Виберіть скорочення для категорії</option>
            {{#each shorts}}
                <option>{{name}}</option>
            {{/each}}
        </select>
        <label for="short">Скорочення</label>
    </div>

    <div class="buttons">
        <button class="btn">Додати категорію</button>
        <a href="/" class="btn red">Назад на головну</a>
    </div>
</form>