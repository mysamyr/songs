{{#if err}}
    <p class="msg alert">{{err}}</p>
{{/if}}

<h1>Додати нову пісню</h1>

<form action="/song/add" method="POST">
    <div class="input-field col s12">
        <select id="categories" name="categories" required multiple>
            {{#each categories}}
                {{#ifneq @root.current name}}
                    <option>{{name}}</option>
                {{/ifneq}}
            {{/each}}
        </select>
        <label for="categories">Виберіть категорію</label>
    </div>

    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required>
        <label for="name">Назва пісні</label>
        <span class="helper-text" data-error="Назва пісні"></span>
    </div>

    <div class="input-field">
        <textarea id="text" name="text" class="materialize-textarea validate" required></textarea>
        <label for="text">Текст пісні</label>
        <span class="helper-text" data-error="Введіть текст пісні"></span>
    </div>

    <div class="buttons">
        <button class="btn">Додати пісню</button>
        <a href="/category" class="btn goHome">Назад до категорій</a>
    </div>
</form>
